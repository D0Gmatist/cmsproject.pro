<div class="col-lg-3 col-md-4 col-sm-4">
	<div class="mt-widget-1 vk-widget-1">
		<div class="mt-img">
			<img src="{photo_200}">
		</div>
		<div class="mt-body">
			<h3 class="mt-username">{last_name} {first_name}</h3>
			<p class="mt-user-title">#{id}[nickname] / {nickname}[/nickname]</p>
		</div>
		<div class="div-vk-search-result">
			<table class="table table-bordered table-hover table-vk-search-result">

				<tr>
					<td class="no-br-r" style="width: 110px;">Страна</td>
					<td class="no-br-l"><div>{country}</div></td>
				</tr>

				<tr>
					<td class="no-br-r">Город</td>
					<td class="no-br-l"><div>{city}</div></td>
				</tr>
				[mobile_phone]
				<tr>
					<td class="no-br-r">Мобильный</td>
					<td class="no-br-l"><div>{mobile_phone}</div></td>
				</tr>
				[/mobile_phone]
				[home_phone]
				<tr>
					<td class="no-br-r">Домашний</td>
					<td class="no-br-l"><div>{home_phone}</div></td>
				</tr>
				[/home_phone]
				[skype]
				<tr>
					<td class="no-br-r">Skype</td>
					<td class="no-br-l"><div>{skype}</div></td>
				</tr>
				[/skype]
				[facebook]
				<tr>
					<td class="no-br-r">Facebook</td>
					<td class="no-br-l"><div>{facebook}</div></td>
				</tr>
				[/facebook]
				[twitter]
				<tr>
					<td class="no-br-r">Twitter</td>
					<td class="no-br-l"><div>{twitter}</div></td>
				</tr>
				[/twitter]
				[instagram]
				<tr>
					<td class="no-br-r">Instagram</td>
					<td class="no-br-l"><div>{instagram}</div></td>
				</tr>
				[/instagram]
			</table>
		</div>
	</div>
</div>