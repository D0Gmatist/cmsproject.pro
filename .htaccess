DirectoryIndex index.php

RewriteEngine On

RewriteBase /
RewriteCond %{HTTP_HOST} (.*)
RewriteCond %{REQUEST_URI} /$ [NC]
RewriteRule ^(.*)(/)$ $1 [L,R=301]

ErrorDocument 400 /error/400.html
ErrorDocument 401 /error/401.html
ErrorDocument 403 /error/403.html
ErrorDocument 404 /error/404.html
ErrorDocument 500 /error/500.html

RewriteRule ^login(/?)+$ index.php?action=login [L]
RewriteRule ^logout(/?)+$ index.php?action=logout [L]
RewriteRule ^registration(/?)+$ index.php?action=registration [L]
RewriteRule ^registration_vk(/?)+$ index.php?action=registration_vk [L]
